{% model "news.json" %}
{% block content %}
<div class="gutter">
  <div class="d1-6 m1">
    <section class="side-navigation-meta">
      <a href="/site-news" class="back-button">Назад к новостям</a>
    </section>
    <ul class="side-navigation">
      {% for group in model.groups %}
        <li><a href="#" class="side-navigation-item">{{ group.title }} ({{ group.news-quantity }})</a></li>
      {% endfor %}
      {% for i in (1..10) %}
        <li><a href="#" class="side-navigation-item">Blah</a></li>
      {% endfor %}
      <li><a href="#" class="side-navigation-item">Архив</a></li>
    </ul>
  </div><div class="d2-3 m1">
    <div class="box">
      <div class="box-content">
        <section class="post-meta">
          <a class="icon-twitter fluffy" href="#">Share on Twitter</a>
          <a class="icon-facebook fluffy" href="#">Share on Facebook</a>
          <a class="icon-vkontakte fluffy" href="#">Share on Vkontakte</a>
        </section>
        <article class="readable fluffy">
          <header class="post-header">
            <h2>Какая-то новость</h2>
            <section class="post-meta">
              Дата новости;
            </section>
          </header>
          <section>
            {{ 4 | lorem_ipsum:"p" }}
          </section>
          <footer class="post-links">

          </footer>
        </article>
      </div>
    </div>
  </div>

  <nav class="mobile-side-navigation">
    <h2><a href="/site-news">Новости</a></h2>
    <ul class="side-navigation">
      {% for group in model.groups %}
        <li><a href="#" class="side-navigation-item">{{ group.title }} ({{ group.news-quantity }})</a></li>
      {% endfor %}
      {% for i in (1..10) %}
        <li><a href="#" class="side-navigation-item">Blah</a></li>
      {% endfor %}
      <li><a href="#" class="side-navigation-item">Архив</a></li>
    </ul>
  </nav>
</div>
{% endblock %}