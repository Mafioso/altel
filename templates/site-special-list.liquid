{% model "news.json" %}
{% block content %}

<div class="gutter">
  <h1>Акции</h1>
  <div class="d1-6 m1">
    <ul class="side-navigation">
      {% for group in model.groups %}
        <li><a href="#" class="side-navigation-item">{{ group.title }} ({{ group.news-quantity }})</a></li>
      {% endfor %}
      <li><a href="#" class="side-navigation-item">Архив</a></li>
    </ul>
  </div><div class="d2-3 m1">
    {% for group in model.groups %}
      <header class="group-header">
        <h2 class="group-title">{{ group.title }}</h2>
        <section class="group-meta">
          {{ group.news-quantity }} новости
        </section>
      </header>
      {% for post in group.news %}
        <div class="box">
          <div class="box-content">
            <article class="post-preview">
              <header class="post-header">
                <h2>{{ post.title }}</h2>
                <section class="post-meta">
                  {{ post.date }}
                </section>
              </header>
              <section class="post-excerpt">
                <p>
                  {{ "776x300" | placeholder | image_tag }}
                </p>
              </section>
              <footer class="post-links">
                <a class="button" href="/site-special-list-item">Read more</a>
              </footer>
            </article>
          </div>
        </div>
      {% endfor %}
    {% endfor %}
    {% include "pagination" %}
  </div>
  <nav class="mobile-side-navigation">
    <h2><a href="/site-special-list">Акции</a></h2>
    <ul class="side-navigation">
      {% for group in model.groups %}
        <li><a href="#" class="side-navigation-item">{{ group.title }} ({{ group.news-quantity }})</a></li>
      {% endfor %}
      <li><a href="#" class="side-navigation-item">Архив</a></li>
    </ul>
  </nav>
</div>

{% endblock %}