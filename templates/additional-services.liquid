{% model "services.json" %}

{% block content %}
  {% include "dashboard-navigation" %}

  <section class="section-container">
    <div class="page-title-container">
      <a href="/dashboard" class="back-button">Назад в кабинет</a>
      <h2 class="page-title">
        Список доступных услуг
      </h2>
      <p class="section-container-badge">
        1235 тенге на счете
      </p>
    </div>

    <div class="text-center">
      <div class="d2-3">
        <div class="box">
          <div class="box-content">
            <h2 class="plan-title">Дополнительные услуги</h2>
            <ul class="additional-services-setuplist">
              {% for service in model.services %}
              <li class="{% if service.active %}active{% endif %}">
                <div class="d2-3 middle">
                  <p class="service-title">{{ service.name }}</p>
                  <p class="service-subtitle">{{ service.subtitle }}</p>
                </div><p class="d1-3 middle no-trailer text-right">
                  {% if service.active %}
                    <a href="#" class="u-link">Отключить</a>
                  {% else %}
                    <a href="#" class="button">{{ service.cta-message }}</a>
                  {% endif %}
                </p>
              </li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <p class="gutter text-left"><a href="/connected-services" class="iu-link">Все подключенные услуги</a></p>
      </div>
    </div>

    
    {% comment %}{% for service in model.services %}<div class="d1-4 l1-3">
      <a href="{{ service.url }}" class="box ratio-box ratio-4-3 {% if service.active %}active{% endif %}">
        <div class="box-background"></div>
        <div class="box-content">
          <h2 class="plan-title">{{ service.name }}</h2>
          <p class="plan-subtitle">{{ service.subtitle }}</p>
          <div class="box-footer plan-cta-container">
            {% if service.active %}
              Услуга подключена
            {% else %}
              <div href="#" class="button">{{ service.cta-message }}</div>
            {% endif %}
          </div>
        </div>
      </a>
      {% if service.active %}
        <p class="gutter"><a href="#" class="iu-link">Отключить</a></p>
      {% endif %}
    </div>{% endfor %}{% endcomment %}
  </section>
{% endblock %}